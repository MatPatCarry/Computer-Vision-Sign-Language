{
  "name": "Popup SLR",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Click to show an alert",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "commands": {
    "stop": {
      "suggested_key": "Alt+Shift+S",
      "description": "stopping rec"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "Start / Stop Recording"
    }
  }
}